# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.c]
indent_size = 4

[*.java]
indent_size = 4

[*.kt]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.xml]
indent_size = 4

[Makefile]
indent_size = 8
indent_style = tab
